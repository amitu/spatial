<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>fastn-spatial: {{PKG}} ({{WASM_HASH}})</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            background: #1a1a2e;
        }
        #debug-log {
            position: fixed;
            top: 10px;
            left: 10px;
            right: 10px;
            max-height: 40%;
            overflow-y: auto;
            background: rgba(0, 0, 0, 0.8);
            color: #0f0;
            font-family: monospace;
            font-size: 12px;
            padding: 10px;
            border-radius: 5px;
            z-index: 9999;
            pointer-events: none;
        }
        #debug-log.hidden { display: none; }
        .log-info { color: #0f0; }
        .log-warn { color: #ff0; }
        .log-error { color: #f00; }
        #enter-vr {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 40px;
            font-size: 18px;
            font-weight: bold;
            background: #4CAF50;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            z-index: 9998;
            display: none;
        }
        #enter-vr:hover { background: #45a049; }
        #enter-vr:active { background: #3d8b40; }
        #enter-vr.exit-vr { background: #f44336; }
        #enter-vr.exit-vr:hover { background: #da190b; }
        #toggle-console {
            position: fixed;
            top: 10px;
            right: 10px;
            padding: 8px 12px;
            font-size: 14px;
            background: #333;
            color: white;
            border: 1px solid #666;
            border-radius: 5px;
            cursor: pointer;
            z-index: 10000;
        }
        #toggle-console:hover { background: #444; }
        #status-bar {
            position: fixed;
            bottom: 80px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 15px;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 15px;
            border-radius: 20px;
            font-family: monospace;
            font-size: 12px;
            color: white;
            z-index: 9997;
        }
        .status-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .status-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background: #666;
        }
        .status-dot.connected { background: #ff0; }
        .status-dot.working { background: #0f0; }
    </style>
</head>
<body>
<div id="debug-log"></div>
<button id="toggle-console">Console</button>
<div id="status-bar">
    <div class="status-item">
        <span class="status-dot" id="gamepad-dot"></span>
        <span id="gamepad-status">No gamepad</span>
    </div>
</div>
<button id="enter-vr">Enter VR</button>
<script>
    // On-screen debug console for Quest/mobile
    const debugLog = document.getElementById('debug-log');
    const maxLines = 50;

    function addLog(msg, type = 'info') {
        const line = document.createElement('div');
        line.className = 'log-' + type;
        line.textContent = msg;
        debugLog.appendChild(line);
        // Keep only last N lines
        while (debugLog.children.length > maxLines) {
            debugLog.removeChild(debugLog.firstChild);
        }
        debugLog.scrollTop = debugLog.scrollHeight;
    }

    // Intercept console methods
    const origLog = console.log;
    const origWarn = console.warn;
    const origError = console.error;
    const origInfo = console.info;

    console.log = (...args) => { origLog(...args); addLog(args.join(' '), 'info'); };
    console.info = (...args) => { origInfo(...args); addLog(args.join(' '), 'info'); };
    console.warn = (...args) => { origWarn(...args); addLog(args.join(' '), 'warn'); };
    console.error = (...args) => { origError(...args); addLog(args.join(' '), 'error'); };

    // WebXR state
    let xrSession = null;
    const enterVrBtn = document.getElementById('enter-vr');

    // Show WebXR status and button if supported
    if (navigator.xr) {
        navigator.xr.isSessionSupported('immersive-vr').then(supported => {
            addLog('WebXR immersive-vr: ' + (supported ? 'SUPPORTED' : 'not supported'), supported ? 'info' : 'warn');
            if (supported) {
                enterVrBtn.style.display = 'block';
                addLog('Enter VR button shown');
            }
        }).catch(e => {
            addLog('WebXR check failed: ' + e, 'error');
        });
    } else {
        addLog('navigator.xr not available', 'warn');
    }

    // Enter/Exit VR handler
    enterVrBtn.addEventListener('click', async () => {
        if (xrSession) {
            // Exit VR
            addLog('Exiting VR session...');
            await xrSession.end();
            return;
        }

        try {
            addLog('Requesting immersive-vr session...');
            xrSession = await navigator.xr.requestSession('immersive-vr', {
                requiredFeatures: ['local-floor']
            });
            addLog('VR session started!', 'info');

            enterVrBtn.textContent = 'Exit VR';
            enterVrBtn.classList.add('exit-vr');

            xrSession.addEventListener('end', () => {
                addLog('VR session ended');
                xrSession = null;
                enterVrBtn.textContent = 'Enter VR';
                enterVrBtn.classList.remove('exit-vr');
            });

            // TODO: Set up XR rendering
            // For now, just log that we're in VR
            addLog('VR session active - rendering not yet implemented');

        } catch (e) {
            addLog('Failed to start VR: ' + e, 'error');
        }
    });

    // Toggle debug log visibility with 'D' key or button
    const toggleConsoleBtn = document.getElementById('toggle-console');
    toggleConsoleBtn.addEventListener('click', () => {
        debugLog.classList.toggle('hidden');
    });
    document.addEventListener('keydown', (e) => {
        if (e.key === 'd' || e.key === 'D') {
            debugLog.classList.toggle('hidden');
        }
    });

    // Gamepad status tracking
    const gamepadDot = document.getElementById('gamepad-dot');
    const gamepadStatus = document.getElementById('gamepad-status');
    let gamepadConnected = false;
    let gamepadWorking = false;
    let lastGamepadTimestamp = 0;

    window.addEventListener('gamepadconnected', (e) => {
        gamepadConnected = true;
        gamepadDot.className = 'status-dot connected';
        gamepadStatus.textContent = e.gamepad.id.substring(0, 20) + '...';
        addLog('Gamepad connected: ' + e.gamepad.id);
    });

    window.addEventListener('gamepaddisconnected', (e) => {
        gamepadConnected = false;
        gamepadWorking = false;
        gamepadDot.className = 'status-dot';
        gamepadStatus.textContent = 'No gamepad';
        addLog('Gamepad disconnected: ' + e.gamepad.id);
    });

    // Poll gamepad to detect input (working status)
    function pollGamepad() {
        const gamepads = navigator.getGamepads();
        for (const gp of gamepads) {
            if (!gp) continue;

            // Check if timestamp changed (input received)
            if (gp.timestamp > lastGamepadTimestamp) {
                lastGamepadTimestamp = gp.timestamp;
                if (!gamepadWorking && gamepadConnected) {
                    gamepadWorking = true;
                    gamepadDot.className = 'status-dot working';
                    addLog('Gamepad input detected - working!');
                }
            }

            // Also check axes/buttons for any non-zero values
            if (!gamepadWorking && gamepadConnected) {
                const hasInput = gp.axes.some(a => Math.abs(a) > 0.1) ||
                                 gp.buttons.some(b => b.pressed);
                if (hasInput) {
                    gamepadWorking = true;
                    gamepadDot.className = 'status-dot working';
                    addLog('Gamepad input detected - working!');
                }
            }
        }
        requestAnimationFrame(pollGamepad);
    }
    pollGamepad();
</script>
<script type="module">
    import init from './{{JS_FILE}}';
    init();
</script>
</body>
</html>
